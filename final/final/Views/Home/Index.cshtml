
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}


<div class="container show-temp-product">
    <h1 style="text-align: center; margin-bottom: 50px; color: #fdd758">
        Sản phẩm bán chạy
    </h1>
    <div class="slick">
        @foreach (var item in ViewBag.SanPhams)
        {
            count += 1;
            <a href="@Url.Action("Product","Home", new { id = item.MaSP })">
                <img src="~/assets/img/@Url.Content(item.HinhAnh)" alt=@item.TenSP width="250" height="250" />
                <h5>@item.TenSP</h5>
                <p>@item.GiaSP VNĐ</p>
            </a>
            if (count == 8)
            {
                break;
            }
        }
    </div>
</div>

<div class="container sale-poster" id="sale">
    <h1 style="text-align: center; margin-bottom: 40px; color: #fdd758">Khuyến mãi</h1>
    <div class="slick-sale">
        <div><img src="~/assets/img/khuyenMai1.jpg" alt="" /></div>
        <div><img src="~/assets/img/khuyenMai2.jpg" alt="" /></div>
    </div>
</div>

