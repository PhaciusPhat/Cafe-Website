@model IEnumerable<final.Models.SanPham>

@{
    ViewBag.Title = "DSSP";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="title">Sản Phẩm</h2>
<div class="tools">
    <form method="post">
        <input type="text" name="searchProductName" placeholder="tìm kiếm theo tên sản phẩm">
        <button class="btn btn-dark" type="submit"><i class="fas fa-search"></i></button>
    </form>
</div>
<div class="table">
    <div class="table-title">
        <div class="table-row">
            <div>Tên Sản Phẩm</div>
            <div>Giá Sản Phẩm</div>
            <div>Loại Sản Phẩm</div>
            <div>Hình Ảnh</div>
            <div>Chức Năng</div>
        </div>
    </div>
    <div class="table-content">
        @foreach (var item in Model)
        {
            <div class="table-row">
                <div>@item.TenSP</div>
                <div>@item.GiaSP</div>
                <div>@item.LoaiSP.TenLoai</div>
                <div><img src="~/assets/img/@Url.Content(item.HinhAnh)" width="75" alt="Alternate Text" /></div>
                <div>
                    <a href=@Url.Action("editProduct", "Admin", new { id = item.MaSP}) class="btn btn-info"><i class="fas fa-pen"></i></a>
                    <a href=@Url.Action("delProduct", "Admin", new { id = item.MaSP})  class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        }
    </div>
</div>
<div class="more-tools">
    <a href=@Url.Action("createProduct", "Admin") class="btn btn-success"><i class="fas fa-plus"></i></a>
    <a class="btn btn-dark" href=@Url.Action("sortProduct", "Admin")><i class="fas fa-sort-amount-down-alt"></i></a>
</div>