@model IEnumerable<final.Models.LoaiSP>


@{
    ViewBag.Title = "DSTK";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="title">Loại Sản Phẩm</h2>
<div class="tools">
    <form method="post">
        <input type="text" name="searchTypeProductName" placeholder="tìm kiếm theo tên loại sản phẩm">
        <button class="btn btn-dark" type="submit"><i class="fas fa-search"></i></button>
    </form>
</div>
<div class="table">
    <div class="table-title">
        <div class="table-row">
            <div>Tên Loại Sản Phẩm</div>
            <div></div>
            <div></div>
            <div></div>
            <div>Chức Năng</div>
        </div>
    </div>
    <div class="table-content">
        @foreach (var item in Model)
        {
            <div class="table-row">
                <div>@item.TenLoai</div>
                <div></div>
                <div></div>
                <div></div>
                <div>
                    <a href=@Url.Action("editKindOfProduct", "Admin", new { id = item.MaLoaiSP}) class="btn btn-info"><i class="fas fa-pen"></i></a>
                    <a href=@Url.Action("delKindOfProduct", "Admin", new { id = item.MaLoaiSP}) class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    <a href=@Url.Action("showProduct", "Admin", new { id = item.MaLoaiSP}) class="btn btn-info"><i class="fas fa-bars"></i></a>
                </div>
            </div>
        }
    </div>
</div>
<div class="more-tools">
    <a href=@Url.Action("createKindOfProduct", "Admin") class="btn btn-success"><i class="fas fa-plus"></i></a>
    <a class="btn btn-dark" href=@Url.Action("sortProductType", "Admin")><i class="fas fa-sort-amount-down-alt"></i></a>
</div>


