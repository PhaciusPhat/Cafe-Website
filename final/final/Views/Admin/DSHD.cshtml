@model IEnumerable<final.Models.HoaDon>


@{
    ViewBag.Title = "DSHD";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    int year = DateTime.Now.Year;
    int month = DateTime.Now.Month;
}

<h2 class="title">Thống Kê</h2>
<div class="table">
    <div class="table-title">
        <div class="table-row">
            <div>Mã Hóa Đơn</div>
            <div>Ngày Mua</div>
            <div>UserName</div>
            <div>Tổng Tiền</div>
            <div>Chức Năng</div>
        </div>
    </div>
    <div class="table-content">
        @foreach (var item in Model)
        {
            <div class="table-row">
                <div>@item.MaHD</div>
                <div>@item.NgayMua</div>
                <div>@item.UserNameKH</div>
                <div>@item.TongTien</div>
                <div>
                    <a href=@Url.Action("CTHD", "Admin", new { id = @item.MaHD}) class="btn btn-info"><i class="fas fa-bars"></i></a>
                </div>
            </div>
        }
    </div>
</div>
<div class="more-tools">
    <a class="btn btn-dark" href=@Url.Action("sortInvoice", "Admin")><i class="fas fa-sort-amount-down-alt"></i></a>
</div>

<div class="tools">
    Doanh thu tháng @month: @ViewBag.TongThang VND
</div>

<div class="tools">
    Doanh thu năm @year: @ViewBag.TongNam VND
</div>



