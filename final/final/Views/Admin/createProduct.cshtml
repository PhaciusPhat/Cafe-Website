@model final.Models.SanPham

@{
    ViewBag.Title = "createProduct";
    Layout = "~/Views/Shared/InputAdminView.cshtml";
    int count = 1;
}

@using (Html.BeginForm("createProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="update">
    <form method="post">
        <h1 class="update-title">Thêm Sản Phẩm</h1>
        <div class="form-content">
            <div class="form-group update-form">
                <label for="">Tên Sản Phẩm</label>
                <input type="text"
                       name="TenSP"
                       class="form-control"
                       placeholder="" />
            </div>
            <div class="form-group update-form">
                <label for="">Giá Sản Phẩm</label>
                <input type="text"
                       name="GiaSP"
                       class="form-control"
                       placeholder="" />
            </div>
            <div class="form-group update-form">
                <label for="">Loại Sản Phẩm</label>
                @foreach (var item in ViewBag.ListLoaiSP)
                {
                    if (count == 1)
                    {
                        <div style="display: flex"><input style="width: 20px; height: 20px; margin-right: 10px" type="radio" name="LoaiSP" checked value=@item.MaLoaiSP /><span>@item.TenLoai</span></div>
                    }
                    else
                    {
                        <div style="display: flex"><input style="width: 20px; height: 20px; margin-right: 10px" type="radio" name="LoaiSP" value=@item.MaLoaiSP /><span>@item.TenLoai</span></div>
                    }
                    count++;
                }
            </div>
            <div class="form-group update-form">
                <label for="">Ảnh Sản Phẩm</label>
                <input title="Tải ảnh lên" type="file" name="HinhAnh" />
            </div>
            <div class="form-group update-form" style="justify-content: space-between; 
                    display: flex; align-items: center;">
                <label for="">Chi Tiết</label>
                <textarea id="ChiTiet" name="ChiTiet" rows="4" cols="55"></textarea>
            </div>
        </div>
        <div class="update-submit">
            <button type="submit" class="btn btn-success w-100">Thêm</button>
        </div>
    </form>
</div>
}
